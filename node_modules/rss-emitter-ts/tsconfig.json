{
    "extends": "./node_modules/gts/tsconfig-google.json",
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "declaration": true,
        "outDir": "./dist",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "types": [
            "@types/bluebird",
            "@types/feedparser",
            "@types/node"
        ]
    },
    "include": [
        "lib/**/*"
    ]
}
